@model IEnumerable<ASM_1.Models.Food.FoodOption>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FoodItem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OptionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExtraPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OptionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockQuantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FoodItem.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OptionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExtraPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OptionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockQuantity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FoodOptionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FoodOptionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FoodOptionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
