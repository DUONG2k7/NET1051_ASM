@model List<ASM_1.Models.Food.ComboDetail>
@{
    ViewData["Title"] = "Edit Combo Details";
}

<h1>Edit Combo Details</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" name="comboId" value="@ViewBag.ComboId" />

    <table class="table">
        <thead>
            <tr>
                <th>Món ăn</th>
                <th>Số lượng</th>
                <th>Chọn</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.AllFoodItems as SelectList)
            {
                var foodItemId = int.Parse(item.Value);
                var selected = Model.Any(cd => cd.FoodItemId == foodItemId);
                <tr>
                    <td>@item.Text</td>
                    <td>
                        <input type="number" name="Quantities" value="@(selected? Model.First(cd => cd.FoodItemId == foodItemId).Quantity : 1)" min="1" class="form-control" />
                    </td>
                    <td>
                        <input type="checkbox" name="SelectedFoodItems" value="@foodItemId" @(selected ? "checked" : "") />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
