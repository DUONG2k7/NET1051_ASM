@model ASM_1.Models.Food.Order

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-receipt-cutoff me-2"></i> Phiếu Order #@Model.OrderId
        </h5>
        <span class="badge bg-light text-dark">@Model.Status</span>
    </div>

    <div class="card-body">
        <div class="mb-3 d-flex justify-content-between flex-wrap">
            <div>
                <small class="text-muted d-block">
                    <i class="bi bi-clock me-1"></i> @Model.CreatedAt.ToString("HH:mm dd/MM/yyyy")
                </small>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table align-middle table-bordered table-striped">
                <thead class="table-light">
                    <tr class="text-center">
                        <th style="width: 40%">Món ăn</th>
                        <th style="width: 15%">Số lượng</th>
                        <th style="width: 20%">Đơn giá</th>
                        <th style="width: 25%">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                <strong>@item.FoodItem?.Name</strong>
                                @if (item.Options != null && item.Options.Any())
                                {
                                    <ul class="list-unstyled ms-2 mb-0 small text-muted">
                                        @foreach (var opt in item.Options)
                                        {
                                            <li>- @opt.OptionGroupNameSnap: <span class="fw-semibold">@opt.OptionValueNameSnap</span></li>
                                        }
                                    </ul>
                                }
                            </td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-end">@item.UnitBasePrice.ToString("N0")đ</td>
                            <td class="text-end">@item.LineTotal.ToString("N0")đ</td>
                        </tr>
                    }
                </tbody>
                <tfoot class="fw-bold">
                    <tr>
                        <td colspan="3" class="text-end">Tổng cộng</td>
                        <td class="text-end text-success fs-5">@Model.Items.Sum(x => x.LineTotal).ToString("N0")đ</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <div class="card-footer text-end bg-light">
        <button class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">
            <i class="bi bi-x-circle"></i> Đóng
        </button>
        <button class="btn btn-success btn-sm">
            <i class="bi bi-printer"></i> In phiếu
        </button>
    </div>
</div>
