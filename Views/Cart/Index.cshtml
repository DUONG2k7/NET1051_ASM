@model List<ASM_1.Models.Food.CartItem>
@{
    ViewData["Title"] = "Giỏ hàng";
    var totalItems = Model?.Select(x => x.ProductID).Distinct().Count() ?? 0;
    var subtotal = Model?.Sum(x => x.UnitPrice * x.Quantity) ?? 0m;
    var tableCode = Context.Session.GetString("CurrentTableCode");
    var hasItems = Model != null && Model.Any();
    var orders = ViewBag.Orders as List<ASM_1.Models.Food.Order>;
    var tableName = ViewBag.TableName as string;
}
@section Styles {
    <link rel="stylesheet" href="~/css/pages/cart.css" asp-append-version="true" />
}
<header>
    <style>
        .tab-content {
    display: none;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
}
.tab-content.active {
    display: block;
    opacity: 1;
}
.cart-tabs .tab-btn.active {
    background-color: #0d6efd;
    color: #fff;
    font-weight: 600;
}

    </style>
</header>
<div class="cart-page py-4">
    <div class="container">
        <!-- 🧭 Breadcrumb -->
        <nav class="breadcrumb mb-4">
            <a asp-controller="Food" asp-action="Index" asp-route-tableCode="@tableCode">Trang chủ</a>
            <span class="mx-2">›</span>
            <span class="text-muted">Giỏ hàng</span>
        </nav>

        <!-- 🔖 Tabs -->
        <div class="cart-tabs mb-4 text-center">
            <button class="btn btn-outline-primary me-2 tab-btn active" data-tab="tab-items">
                <i class="fa-solid fa-bag-shopping"></i> Giỏ hàng
            </button>
            <button class="btn btn-outline-secondary tab-btn" data-tab="tab-status">
                <i class="fa-solid fa-clipboard-list"></i> Trạng thái đơn
            </button>
        </div>

        <!-- 🧩 TAB 1: Giỏ hàng -->
        <div id="tab-items" class="tab-content active">
            @if (hasItems)
            {
                <div class="row">
                    <!-- LEFT: danh sách món -->
                    <div class="col-lg-8 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Danh sách món ăn (@totalItems món)</h5>
                                <form asp-controller="Cart" asp-action="ClearCart" asp-route-tableCode="@tableCode" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash"></i> Xóa tất cả
                                    </button>
                                </form>
                            </div>
                            <div class="card-body">
                                @foreach (var item in Model)
                                {
                                    <div class="d-flex align-items-start border-bottom py-3">
                                        <img src="@Url.Content(item.ProductImage)" alt="@item.ProductName"
                                             class="rounded me-3" style="width: 80px; height: 80px; object-fit: cover;" />

                                        <div class="flex-grow-1">
                                            <h6 class="fw-bold mb-1">@item.ProductName</h6>
                                            <div class="text-muted small mb-1">
                                                @if (item.Options != null && item.Options.Any())
                                                {
                                                    foreach (var opt in item.Options)
                                                    {
                                                        <span>@opt.OptionTypeName: @opt.OptionName &nbsp;</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span>Không có tùy chọn</span>
                                                }
                                            </div>
                                            <div class="text-muted small mb-2">
                                                Ghi chú: @(string.IsNullOrWhiteSpace(item.Note) ? "Không có" : item.Note)
                                            </div>

                                            <div class="d-flex align-items-center justify-content-between">
                                                <div class="input-group input-group-sm" style="width: 120px;">
                                                    <form asp-controller="Cart" asp-action="ChangeQuantity"
                                                          asp-route-cartItemId="@item.CartItemID" asp-route-delta="-1"
                                                          asp-route-tableCode="@tableCode" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-outline-secondary">-</button>
                                                    </form>

                                                    <input type="number" class="form-control text-center" value="@item.Quantity" readonly />

                                                    <form asp-controller="Cart" asp-action="ChangeQuantity"
                                                          asp-route-cartItemId="@item.CartItemID" asp-route-delta="1"
                                                          asp-route-tableCode="@tableCode" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-outline-secondary">+</button>
                                                    </form>
                                                </div>

                                                <span class="fw-semibold text-primary">@item.TotalPrice.ToString("N0") VNĐ</span>

                                                <form asp-controller="Cart" asp-action="RemoveFromCart"
                                                      asp-route-cartItemId="@item.CartItemID"
                                                      asp-route-tableCode="@tableCode" method="post">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- RIGHT: tổng tiền + xác nhận -->
                    <div class="col-lg-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="fw-bold mb-3">Tóm tắt đơn hàng</h5>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Tạm tính (@totalItems món):</span>
                                    <span>@subtotal.ToString("N0") VNĐ</span>
                                </div>
                                <hr />
                                <div class="d-flex justify-content-between fw-bold mb-3">
                                    <span>Tổng cộng:</span>
                                    <span class="text-primary">@subtotal.ToString("N0") VNĐ</span>
                                </div>

                                <form id="checkoutForm" asp-controller="Cart" asp-action="PlaceOrder"
                                      asp-route-tableCode="@tableCode" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-primary w-100 py-2">
                                        <i class="fas fa-check"></i> Xác nhận
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-secondary text-center py-5">
                    <i class="fas fa-shopping-cart fa-2x mb-3"></i>
                    <h5>Giỏ hàng của bạn đang trống</h5>
                    <a asp-controller="Food" asp-action="Index" asp-route-tableCode="@tableCode"
                       class="btn btn-primary mt-3"><i class="fas fa-utensils"></i> Đặt món ngay</a>
                </div>
            }
        </div>

        <!-- 🧾 TAB 2: Trạng thái đơn -->
        <div id="tab-status" class="tab-content">
            @if (ViewBag.AllOrders != null && ((List<ASM_1.Models.Food.Order>)ViewBag.AllOrders).Any())
            {
                <div class="row">
                    <!-- LEFT: danh sách phiếu order -->
                    <div class="col-lg-8 mb-4">
                        @foreach (var order in (List<ASM_1.Models.Food.Order>)ViewBag.AllOrders)
                        {
                            var totalAmount = order.Items?.Sum(x => x.LineTotal) ?? 0m;
                            <div class="card mb-3 shadow-sm">
                                <div class="card-header d-flex justify-content-between">
                                    <div>
                                        <strong>Phiếu Order #@order.OrderId</strong>
                                        <div class="small text-muted">
                                            @order.CreatedAt.ToString("HH:mm dd/MM/yyyy") |
                                            Trạng thái: <b>@order.Status</b>
                                        </div>
                                    </div>
                                    <span class="fw-bold text-primary">@totalAmount.ToString("N0") VNĐ</span>
                                </div>
                                <div class="card-body">
                                    @foreach (var item in order.Items.Take(3))
                                    {
                                        <div class="d-flex justify-content-between small mb-1">
                                            <span>@item.FoodItem?.Name</span>
                                            <span>x @item.Quantity</span>
                                            <span>@item.LineTotal.ToString("N0")đ</span>
                                        </div>
                                    }
                                    @if (order.Items.Count > 3)
                                    {
                                        <div class="text-muted small">...và @(order.Items.Count - 3) món khác</div>
                                    }
                                </div>
                            </div>
                        }
                    </div>

                    <!-- RIGHT: tổng tiền + thanh toán -->
                    <div class="col-lg-4">
                        @{
                            var totalAllOrders = ((List<ASM_1.Models.Food.Order>)ViewBag.AllOrders)?
                            .Sum(o => o.Items?.Sum(i => i.LineTotal) ?? 0m) ?? 0m;
                        }
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="fw-bold mb-3">Tóm tắt thanh toán</h5>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Tổng tiền các phiếu gọi món:</span>
                                    <span>@totalAllOrders.ToString("N0") VNĐ</span>
                                </div>
                                <hr />
                                <div class="d-flex justify-content-between fw-bold mb-3">
                                    <span>Tổng cộng:</span>
                                    <span class="text-success">@totalAllOrders.ToString("N0") VNĐ</span>
                                </div>
                                <a asp-controller="Cart" asp-action="Checkout">
                                    <i class="fas fa-money-bill-wave"></i> Lựa chọn thanh toán
                                </a>
                                <form id="checkoutInvoiceForm"
                                      asp-controller="Cart" asp-action="Checkout"
                                      asp-route-tableCode="@tableCode" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success w-100 py-2">
                                        <i class="fas fa-money-bill-wave"></i> Thanh toán
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-secondary text-center py-5">
                    <i class="fas fa-clipboard-list fa-2x mb-3"></i>
                    <h5>Chưa có phiếu gọi món nào</h5>
                    <a asp-controller="Food" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="fas fa-utensils"></i> Đặt món ngay
                    </a>
                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const tabButtons = document.querySelectorAll(".tab-btn");
            const tabContents = document.querySelectorAll(".tab-content");

            tabButtons.forEach(btn => {
                btn.addEventListener("click", () => {
                    // Loại bỏ active ở tất cả tab & nội dung
                    tabButtons.forEach(b => b.classList.remove("active"));
                    tabContents.forEach(c => c.classList.remove("active"));

                    // Kích hoạt tab được click
                    btn.classList.add("active");
                    const targetId = btn.getAttribute("data-tab");
                    const targetContent = document.getElementById(targetId);
                    if (targetContent) {
                        targetContent.classList.add("active");
                    } else {
                        console.warn("Không tìm thấy tab có ID:", targetId);
                    }

                    // Cuộn nhẹ lên đầu (tùy chọn, UX tốt hơn)
                    window.scrollTo({ top: 150, behavior: "smooth" });
                });
            });
        });
        // Lưu tab hiện tại vào localStorage
        localStorage.setItem("activeTab", targetId);

        // Khi tải lại trang, mở lại tab cũ
        const savedTab = localStorage.getItem("activeTab");
        if (savedTab) {
            document.querySelector(`[data-tab="${savedTab}"]`)?.click();
        }

    </script>
}
